<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EduBridge</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
          <section class="h-screen bg-cover bg-center bg-no-repeat relative" style="background-image: url('/images/swipe.jpg');">
      <div class="flex items-center h-full w-full px-10 bg-black bg-opacity-50">
        <div class="text-white max-w-xl">
          <h1 class="text-5xl font-bold mb-4">EduBridge</h1>
          <p class="mb-6 text-lg">We connect students with expert tutors, offering personalized academic support to elevate understanding and confidence in a variety of subjects.</p>
          <a href="#services" class="bg-green-700 hover:bg-green-800 text-white py-2 px-4 rounded">Services</a>
        </div>
      </div>
    </section>


    <!-- About Section -->
    <section id="about" class="py-16 bg-white">
      <div class="max-w-5xl mx-auto px-6">
        <h2 class="text-4xl font-bold mb-6 text-center">About Us</h2>
        <p class="text-lg text-gray-700 text-center">
          Tutor Mate is dedicated to providing personalized learning experiences for students of all ages. Our expert tutors are committed to helping students achieve academic excellence.
        </p>
      </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-16 bg-white">
      <div class="max-w-6xl mx-auto px-6">
        <h2 class="text-4xl font-bold mb-10 text-center">Why Choose EduBridge?</h2>
        <div class="grid md:grid-cols-3 gap-8 text-white">
          <div class="bg-[#1e4c45] rounded-lg p-6">
            <h3 class="text-2xl font-bold mb-4">Personalized tutoring</h3>
            <p class="text-gray-200 mb-6">Tailored sessions that suit your learning style and academic goals.</p>
            <a href="/student" class="text-white font-semibold hover:underline">Know More &rarr;</a>
          </div>
          <div class="bg-[#3f695d] rounded-lg p-6">
            <h3 class="text-2xl font-bold mb-4">Expert guidance</h3>
            <p class="text-gray-200 mb-6">Experienced tutors who support you through your learning journey.</p>
            <a href="#contact" class="text-white font-semibold hover:underline">Contact &rarr;</a>
          </div>
          <div class="bg-[#1e4c45] rounded-lg p-6">
            <h3 class="text-2xl font-bold mb-4">Flexible scheduling</h3>
            <p class="text-gray-200 mb-6">Schedule sessions at your convenience and learn at your pace.</p>
            <a href="#contact" class="text-white font-semibold hover:underline">Contact &rarr;</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Reviews Section -->
    <section id="reviews" class="py-16 bg-white">
      <div class="max-w-6xl mx-auto px-6">
        <h2 class="text-4xl font-bold mb-10 text-center">What Students Say</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <% const reviews = [
            { name: "Mark Jackson", quote: "The tutors are fantastic and helped me boost my grades!" },
            { name: "Anna Smith", quote: "Highly recommend Tutor Mate. Very professional and supportive." },
            { name: "John Champion", quote: "Helped me clear my exams in just 2 months. Grateful!" }
          ]; %>
          <% reviews.forEach(r => { %>
            <div class="bg-gray-100 rounded-lg p-6 text-center">
              <img src=" baseUrl/images/<%= r.img %>" alt="<%= r.name %>" class="w-20 h-20 rounded-full mx-auto mb-4"/>
              <p class="text-gray-700 italic">“<%= r.quote %>”</p>
              <h4 class="font-semibold mt-2">– <%= r.name %></h4>
            </div>
          <% }) %>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-16 bg-gray-50">
      <div class="max-w-4xl mx-auto px-6 text-center">
        <h2 class="text-4xl font-bold mb-4">Contact Us</h2>
        <p class="text-gray-700 mb-6">Have questions? Reach out to us and we’ll get back to you shortly.</p>
        <p><i class="fas fa-envelope mr-2"></i>contact@EduBridge.com</p>
        <p><i class="fas fa-phone mr-2"></i>+91-9876543210</p>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-8">
      <div class="max-w-6xl mx-auto px-6 flex justify-between items-center flex-wrap">
        <p>&copy; 2025 EduBridge. All rights reserved.</p>
        <div class="space-x-4">
          <a href="#" class="hover:text-gray-300"><i class="fab fa-facebook"></i></a>
          <a href="#" class="hover:text-gray-300"><i class="fab fa-x-twitter"></i></a>
          <a href="#" class="hover:text-gray-300"><i class="fab fa-linkedin"></i></a>
          <a href="#" class="hover:text-gray-300"><i class="fab fa-instagram"></i></a>
        </div>
      </div>
    </footer>

    <!-- Slider Script -->
    <script>
      const slides = document.querySelectorAll('.slide');
      let index = 0;
      setInterval(() => {
        slides[index].classList.remove('active');
        index = (index + 1) % slides.length;
        slides[index].classList.add('active');
      }, 4000);
    </script>
  </body>
</html>
