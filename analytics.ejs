<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Performance Analytics</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
  </head>
  <body class="bg-gradient-to-br from-teal-50 to-green-100 min-h-screen py-10 px-4 font-sans">
    <div class="max-w-5xl mx-auto space-y-10">
      
      <!-- Header / Landing Section -->
      <div class="bg-white bg-opacity-90 shadow-2xl rounded-2xl p-8 text-center">
        <h1 class="text-3xl font-extrabold text-emerald-700 flex justify-center items-center gap-2 mb-2">
          <i class="fas fa-chart-pie"></i> Performance Analytics
        </h1>
        <p class="text-gray-600">Get insights and trends across your classes.</p>
      </div>

      <!-- Dashboard Cards Section -->
      <div>
        <h2 class="text-2xl font-bold text-emerald-700 mb-6 flex items-center gap-2">
          <i class="fas fa-chart-area"></i> Class Performance Dashboard
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <% dashboardData.forEach(card => { %>
            <div class="bg-white rounded-xl shadow-lg p-6">
              <h3 class="text-lg font-semibold text-teal-700 mb-2"><%= card.title %></h3>
              <p class="text-gray-700 text-xl font-bold"><%= card.value %></p>
            </div>
          <% }) %>
        </div>
      </div>

    </div>
  </body>
</html>
