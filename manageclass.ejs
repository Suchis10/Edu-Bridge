<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Manage Classes</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
  />
  <style>
    @keyframes fadeInUp {
      0% { opacity: 0; transform: translateY(20px); }
      100% { opacity: 1; transform: translateY(0); }
    }
    .fade-in-up {
      animation: fadeInUp 0.8s ease-out;
    }
  </style>
</head>

<body class="bg-gradient-to-br from-indigo-100 via-blue-50 to-purple-100 min-h-screen text-gray-800">

  <div class="max-w-6xl mx-auto py-12 px-6 fade-in-up">
    <!-- Header -->
    <div class="flex justify-between items-center mb-10">
      <h1 class="text-4xl font-bold text-indigo-800 flex items-center gap-3">
        <i class="fas fa-chalkboard-user text-indigo-600 text-3xl"></i> Manage Classes
      </h1>
      <a href="/classes/new"
         class="bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white px-5 py-2.5 rounded-lg shadow-md transition transform hover:-translate-y-1 duration-200">
        <i class="fas fa-plus mr-2"></i>New Class
      </a>
    </div>

    <!-- Glass Table -->
    <div class="backdrop-blur-md bg-white/80 border border-gray-200 shadow-2xl rounded-2xl overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-indigo-100/60">
          <tr>
            <th class="px-6 py-4 text-left text-sm font-semibold text-indigo-800 uppercase tracking-wider">Class Name</th>
            <th class="px-6 py-4 text-left text-sm font-semibold text-indigo-800 uppercase tracking-wider">Subject</th>
            <th class="px-6 py-4 text-left text-sm font-semibold text-indigo-800 uppercase tracking-wider">Students</th>
            <th class="px-6 py-4 text-right text-sm font-semibold text-indigo-800 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100 bg-white/70">
          <% if (classes && classes.length > 0) { %>
            <% classes.forEach(cls => { %>
              <tr class="hover:bg-indigo-50 transition">
                <td class="px-6 py-4 font-medium"><%= cls.name %></td>
                <td class="px-6 py-4"><%= cls.subject %></td>
                <td class="px-6 py-4"><%= cls.studentCount %></td>
                <td class="px-6 py-4 text-right space-x-3">
                  <a href="/classes/<%= cls.id %>" class="text-blue-600 hover:underline">
                    <i class="fas fa-eye mr-1"></i>View
                  </a>
                  <a href="/classes/<%= cls.id %>/edit" class="text-yellow-600 hover:underline">
                    <i class="fas fa-edit mr-1"></i>Edit
                  </a>
                  <form action="/classes/<%= cls.id %>?_method=DELETE" method="POST" class="inline">
                    <button type="submit" class="text-red-600 hover:underline">
                      <i class="fas fa-trash mr-1"></i>Delete
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="4" class="text-center px-6 py-10 text-gray-500">No classes found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <hr>
    <a href="/dashboard/teacher" class="text-indigo-600 hover:underline text-sm">
          <i class="fas fa-arrow-left mr-1"></i>Back to Class Management
      </a>
  </div>
</body>
</html>
